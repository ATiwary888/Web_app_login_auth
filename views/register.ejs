<%- include('includes/header') %>
 
<div class = "container">

  <% if(locals.errors){ %>
    <% errors.forEach(function(error){%>
      <div class= "alert alert-danger"><%= error.msg%></div>

    <%})%>

  <%}%>
  <%- messages() %>

    <form method="post" action="/users/register" class="form-signin">
 
  <h1 class="form-signin-heading text-center">User Registration</h1>
  <label  class="sr-only">Name</label>
  <input type="text" name="name" value="<%= (!!locals.name)?name:'' %>" class="form-control" placeholder="Name" required autofocus>
  <br>

  <label  class="sr-only">Email address</label>
  <input  name="email" value="<%= (!!locals.email)?email:'' %>" class="form-control" placeholder="Email address" required autofocus>
  <br>


  <label  class="sr-only">username</label>
  <input type="text" name="username" value="<%= (!!locals.username)?username:'' %>" class="form-control" placeholder="Username" required autofocus>
  <br>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="password" value="<%= (!!locals.password)?password:'' %>" class="form-control" placeholder="Password" required>
  <br>

  <label for="inputPassword" class="sr-only">Confirm Password</label>
  <input type="password" name="password2" value="<%= (!!locals.password2)?password2:'' %>" class="form-control" placeholder="Password" required>
  <br>
  <p>Have an account?<a href="/users/login">Login</a></p>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
 
</form>

</div>

<%- include('includes/footer') %>
